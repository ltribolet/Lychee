#disable or enable xdebug by commenting out this next line
ZEND_EXTENSION_XDEBUG=/usr/local/lib/php/extensions/no-debug-non-zts-20170718/xdebug.so

#xdebug settings
PHP_XDEBUG_REMOTE_HOST=172.17.0.1
PHP_XDEBUG_REMOTE_ENABLE=1
PHP_XDEBUG_IDEKEY=PHPSTORM
PHP_XDEBUG_REMOTE_PORT=9001
PHP_XDEBUG_MAX_NESTING_LEVEL=500
PHP_XDEBUG_DEFAULT_ENABLE=0
PHP_XDEBUG_REMOTE_CONNECT_BACK=0
PHP_XDEBUG_REMOTE_LOG=/var/www/lychee/storage/logs/xdebug.log

#logging settings for xdebug
ERROR_REPORTING=E_ALL
DISPLAY_STARTUP_ERRORS=On
DISPLAY_ERRORS=On

#enable or disable opcache
OPCACHE_ENABLE=0

#opcache settings
OPCACHE_MEMORY_CONSUMPTION=512
OPCACHE_INTERNED_STRINGS_BUFFER=32
OPCACHE_MAX_ACCELERATED_FILES=200000
OPCACHE_VALIDATE_TIMESTAMPS=0
OPCACHE_REVALIDATE_FREQ=300
OPCACHE_FAST_SHUTDOWN=1
OPCACHE_ENABLE_FILE_OVERRIDE=1
